@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Index  Category</h3>

        </div>
            <div class="col-6">
                <a asp-controller="Category"  asp-action="Create"  class="btn btn-primary"> Create New Category</a>
     

        </div>

    </div>

</div>

<table  class="table table-bordered table-striped"  style="width:100%">
    <thead>
        <tr>
             <th>
               Id
            </th>
            <th>
                Category
            </th>
              <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                  <td width="30%">
                    @obj.DisplayOrder
                </td>
                  <td width="30%">
            
                     <a asp-controller="Category"  asp-action="Edit" asp-route-Id="@obj.Id"  class="btn btn-secondary"> Edit</a>
               
                     
                     <a asp-controller="Category"  asp-action="Delete" asp-route-Id="@obj.Id"  class="btn btn-danger"> Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

